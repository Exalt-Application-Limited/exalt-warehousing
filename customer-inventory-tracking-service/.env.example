# Customer Inventory Tracking Service Environment Configuration

# Application Settings
NODE_ENV=development
PORT=8089
SERVICE_NAME=customer-inventory-tracking-service

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/customer-inventory-tracking

# Security Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging Configuration
LOG_LEVEL=info

# External Service Integration
INVENTORY_SERVICE_URL=http://localhost:8083
WAREHOUSE_SERVICE_URL=http://localhost:8082
NOTIFICATION_SERVICE_URL=http://localhost:8081

# Feature Flags
ENABLE_BULK_IMPORT=true
ENABLE_BARCODE_GENERATION=true
ENABLE_QR_CODE_GENERATION=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Settings
MAX_FILE_SIZE=10mb
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Cache Configuration (if Redis is used)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600